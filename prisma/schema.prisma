datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  MANAGER
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  image     String?
  createdAt DateTime @default(now())
}

model ActivityLog {
  id          Int      @id @default(autoincrement())
  action      String
  performedBy String
  target      String?
  createdAt   DateTime @default(now())
}
